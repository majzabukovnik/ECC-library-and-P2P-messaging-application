<Window x:Class="EccGuiWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EccGuiWpf"
        mc:Ignorable="d"
        Title="MainWindow" ResizeMode="CanMinimize" Height="650" Width="1000"
        Background="#1f1f21">
    
    <Grid>
        <local:welcome x:Name="welcome" Loaded="welcome_Loaded" Width="1000" Height="650" />
        <local:chat x:Name="chat" Visibility="Hidden" Width="1000" Height="650" />
    </Grid>
</Window>
